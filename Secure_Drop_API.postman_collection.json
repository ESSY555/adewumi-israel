{
	"info": {
		"_postman_id": "secure-drop-api-collection",
		"name": "Secure Drop API",
		"description": "Collection for testing the Secure Drop API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Create Secret (Basic)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Save the secret ID for later use",
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"secret_id\", jsonData.id);",
							"    console.log(\"Secret ID saved: \" + jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"text\": \"My secret password is: P@ssw0rd123\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/secrets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets"
					]
				},
				"description": "Creates a new secret without expiration time"
			},
			"response": []
		},
		{
			"name": "2. Create Secret with TTL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"text\": \"This secret will expire in 5 minutes\",\n  \"ttl\": 5\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/secrets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets"
					]
				},
				"description": "Creates a secret with a time-to-live (TTL) of 5 minutes"
			},
			"response": []
		},
		{
			"name": "3. Retrieve Secret (Burn-on-Read)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/secrets/{{secret_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets",
						"{{secret_id}}"
					]
				},
				"description": "Retrieves and permanently deletes a secret. This can only be called once per secret."
			},
			"response": []
		},
		{
			"name": "4. Retrieve Same Secret Again (Should Fail)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/secrets/{{secret_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets",
						"{{secret_id}}"
					]
				},
				"description": "Attempts to retrieve the same secret again. Should return 404 since it was deleted in the previous request."
			},
			"response": []
		},
		{
			"name": "5. Validation Error - Missing Text",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"ttl\": 60\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/secrets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets"
					]
				},
				"description": "Tests validation - text field is required"
			},
			"response": []
		},
		{
			"name": "6. Validation Error - Invalid TTL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"text\": \"My secret\",\n  \"ttl\": -10\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/secrets",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets"
					]
				},
				"description": "Tests validation - TTL must be between 1 and 10080 (7 days)"
			},
			"response": []
		},
		{
			"name": "7. Retrieve Non-Existent Secret",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/secrets/non-existent-id-12345",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"secrets",
						"non-existent-id-12345"
					]
				},
				"description": "Tests 404 response for non-existent secret"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api/v1",
			"type": "string"
		},
		{
			"key": "secret_id",
			"value": "",
			"type": "string"
		}
	]
}
